{
  "manifest_version": 3,
  "name": "Погода в регионе",
  "version": "1.0",
  "description": "Отображение текущей погоды и прогноза на неделю.",
  "permissions": ["geolocation", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}